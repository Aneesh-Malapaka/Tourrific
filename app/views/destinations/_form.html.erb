<%= form_with model: @destination, url: tour_company_destinations_path(@destination.tour_company_id, @destination) do |form| %>
  <% if @destination.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@destination.errors.count, "error") %> prohibited this destination from being saved:</h2>

      <ul>
        <% @destination.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :dest_name, style: "display: block" %>
    <%= form.text_field :dest_name, :required => true %>
  </div>

  <div>
     <%= form.fields_for :location do |f|%>
      <%= f.label :location_city, style: "display: block" %>
      <%= f.text_field :location_city  ,:required => true %>

      <%= f.label :location_state, style: "display: block" %>
      <%= f.text_field :location_state ,:required => true %>

      <%= f.label :location_country, style: "display: block" %>
      <%= f.text_field :location_country ,:required => true %>

      <%= f.label :location_country_code, style: "display: block" %>
      <%= f.text_field :location_country_code ,:required => true %>
    <% end %>
    
  </div>

  <div>
    <%= form.label :rating, style: "display: block" %>
    <%= form.number_field :rating, :required => true %>
  </div>

  <div>
    <%= form.label :main_photo, style: "display: block" %>
    <%= form.file_field :main_image, :required => true %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>

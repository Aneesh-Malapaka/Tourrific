<%= form_with model: @destination, url: "/tour_companies/#{@destination.tour_company.id}/destinations/#{params[:id]}", method: :patch do |form| %>
  <% if @destination.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@destination.errors.count, "error") %> prohibited this destination from being saved:</h2>

      <ul>
        <% @destination.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p>Yes u r in the right layout</p>
  <div>
    <%= form.label :dest_name, style: "display: block" %>
    <%= form.text_field :dest_name %>
  </div>

  <div>
    <%= form.fields_for :location do |f|%>
      <%= f.label :location_city, style: "display: block" %>
      <%= f.text_field :location_city %>

      <%= f.label :location_state, style: "display: block" %>
      <%= f.text_field :location_state %>

      <%= f.label :location_country, style: "display: block" %>
      <%= f.text_field :location_country %>

      <%= f.label :location_country_code, style: "display: block" %>
      <%= f.text_field :location_country_code %>
    <% end %>
  </div>

  <div>
    <%= form.label :rating, style: "display: block" %>
    <%= form.number_field :rating %>
  </div>

  <div>
    <%= form.label :main_photo, style: "display: block" %>
    <%= form.file_field :main_image %>
  </div>

  <div>
    <%= form.label :tour_company_id, style: "display: block" %>
    <%= form.text_field :tour_company_id %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>

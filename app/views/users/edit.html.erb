<main class="edit--user">
  <h1>Edit Your Profile</h1>
  <%= form_with model: @user, url: user_path(@user), method: :patch do |form| %>
    <% if @user.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

        <ul>
          <% @user.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.label :username, style: "display: block" %>
      <%= form.text_field :username %>
    </div>

    <div>
      <%= form.label :phone, style: "display: block" %>
      <%= form.number_field :phone %>
      <%= form.label :country, style: "display: block" %>
      <%= form.text_field :country %>
      <%= form.label "City", style: "display: block" %>
      <%= form.text_field :location %>
    </div>

    <div>
      <%= form.submit class:"btn--submit" %>
    </div>
  <% end %>
  <div>

    <%= link_to "Email and password can be changed here", edit_user_registration_path %>
    <%= link_to "Back to your profile", user_path(@user) %>
  </div>

</main>